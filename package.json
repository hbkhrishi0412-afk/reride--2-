{
  "name": "reride-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A modern vehicle marketplace platform.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "seed": "node seed-simple.js",
    "optimize": "node scripts/optimize.js",
    "build:optimized": "npm run build && npm run optimize",
    "build:analyze": "npm run build && npm run analyze",
    "analyze": "npx vite-bundle-analyzer dist",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "lighthouse:ci": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'",
    "perf:audit": "npm run lighthouse:ci && node scripts/analyze-performance.js",
    "perf:budget": "node scripts/performance-budget.js",
    "clean": "rm -rf dist node_modules/.vite",
    "dev:fast": "npm run clean && npm run dev"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chart.js": "^4.5.0",
    "firebase": "^10.7.1",
    "mongoose": "^8.4.1",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vercel/node": "^5.3.24",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "web-vitals": "^5.1.0"
  }
}
